<p id="notice"><%= notice %></p>

<h1>物件管理画面</h1>

<table BORDER="1" CELLSPACING="0" CELLPADDING="0">
<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>住所</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.address %></td>
        <td><%= article.remark %></td>
        <td><%= link_to '表示する', article %></td>
        <td><%= link_to '編集する', edit_article_path(article) %></td>
        <td><%= link_to '削除する', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

