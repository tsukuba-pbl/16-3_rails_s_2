<p id="notice"><%= notice %></p>

<div class="page-header">
<h1>物件管理画面</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>物件id</th>
      <th>物件名</th>
      <th>住所</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.name %></td>
        <td><%= article.address %></td>
        <td><%= article.remark %></td>
        <td class='btn btn-default btn-xs'><%= link_to '表示する', article %></td>
        <td class='btn btn-default btn-xs'><%= link_to '編集する', edit_article_path(article) %></td>
        <td class='btn btn-default btn-xs'><%= link_to '削除する', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class='btn btn-default btn-xs'>
<%= link_to '新規登録', new_article_path %>
</div>
