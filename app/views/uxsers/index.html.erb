<p id="notice"><%= notice %></p>


<h1>全天球写真管理画面</h1>

<table BORDER="1" CELLSPACING="0" CELLPADDING="0">
  <thead>
    <tr>
      <th>部屋名</th>
      <th>画像のURL</th>
      <th>サムネイル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uxsers.each do |uxser| %>
      <tr>
        <td><%= uxser.name %></td>
        <td><%= uxser.avatar %></td>
        <td><%= image_tag(uxser.avatar_url(:thumbnail)) %></td>
        <td><%= link_to '表示する', uxser %></td>
        <td><%= link_to '編集する', edit_uxser_path(uxser) %></td>
        <td><%= link_to '削除する', uxser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

