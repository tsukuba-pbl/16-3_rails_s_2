<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table BORDER="1" CELLSPACING="0" CELLPADDING="0">
  <thead>
    <tr>
      <th>id</th>
      <th>Width</th>
      <th>Height</th>
      <th>URL</th>
      <th>thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.id %></td>
        <td><%= room.width %></td>
        <td><%= room.height %></td>
        <td><%= room.madori %></td>
        <td><%= image_tag(room.madori_url(:thumbnail)) %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

