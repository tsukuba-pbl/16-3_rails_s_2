<%= form_for @uzser, :html => { :class => "form-horizontal uzser" } do |f| %>

  <% if @uzser.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@uzser.errors.count, "error") %> prohibited this uzser from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @uzser.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :name2, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name2, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name2) %>
  </div>
  <div class="form-group">
    <%= f.label :name3, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name3, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name3) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                uzsers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
